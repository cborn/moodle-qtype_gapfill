 <themes>
    <theme>
    <name>BigText</name>
      <style>
      .que.gapfill .draggable, p{
        font-size:1.5em;
      }
      </style>
    </theme>
    <theme>
      <name>Bulge</name>
      <style>
      .draggable:hover{
              transform: scale(1.2);
      }
      .que.gapfill input.droptarget.dropped {
              transform: scale(1.2);
      }
      </style>
    </theme>
    <theme>
      <name>Gapfill Underscore</name>
      <style>
      .que.gapfill  input.droptarget,input.typetext{
          background:none;
          border:none;
          border-bottom: 1px dashed black;
     }
      </style>
    </theme>
  </themes>
